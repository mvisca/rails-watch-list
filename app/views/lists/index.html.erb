<div class="container col-6">
  <div class="text-center">
    <h1>Your lists</h1>
  </div>

<%= link_to 'Create list', new_list_path  %>
  <div class="container p-3">
    <% @lists.each do | list | %>
      <div class="card d-flex inline-block m-3 p-3">
        <div class="card-category">
          <h2> <%= link_to list.name, list_path(list) %></h2>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
            url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
            <% #TODO: Check functioning ok added photo display %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
